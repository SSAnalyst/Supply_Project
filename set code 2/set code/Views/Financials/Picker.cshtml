<h2 ng-click="showPopover= !showPopover" class="centered">
    {{($ctrl.brands|find:{CountryId: $root.$stateParams.brand}).BrandName }} <br />
    <small>{{($ctrl.dateList|find:{PeriodId:$root.$stateParams.date}).Name}}</small>
    <i class="{{$root.Icons.arrowdown}} right"></i>
</h2>
<div id="test" class="popover fade bottom in" 
     ng-style="{display: showPopover?'block':'none'}" 
     style="top: 60px;" 
     ng-click="showPopover = false">
    <div class="arrow" style="left: 50%;"></div>
    <div style="width: 500px;">
        <div class="col-sm-6">
            <div class="list-group" style="max-height: 400px; overflow-y: auto;">
                <a class="list-group-item"
                   ng-repeat="date in $ctrl.dateList|orderBy:'PeriodId':true"
                   ui-sref-active="active"
                   ui-sref="financials.overview({date:date.PeriodId})">
                    {{date.Name}}
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="list-group" style="max-height: 400px; overflow-y: auto;">
                <a ng-repeat="brand in $ctrl.brands|orderBy:'BrandName'" 
                   class="list-group-item" 
                   ui-sref="financials.overview({brand: brand.BrandId})" 
                   ui-sref-active="active">{{country.CountryName}}</a>
            </div>
        </div>
    </div>
</div>